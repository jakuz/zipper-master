%table.table
  %thead
    %tr
      %th Data utworzenia
      %th Nazwa pliku
      %th Rozmiar
      %th Link
  %tbody
    - @attachments.each do |attachment|
      %tr
        %td= attachment.created_at.to_date
        %td= attachment.file.filename
        %td= attachment.file.byte_size.to_s(:human_size)
        %td= link_to 'Pobierz', attachment.file

= paginate @attachments, window: 2
